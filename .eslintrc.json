{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "log",
                    "info",
                    "warn",
                    "error",
                    "debug"
                ]
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
    }
}